{
  "manifest_version": 2,
  "name": "Youtube Prod",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://www.youtube.com/"],
      "js": ["homepage.js"]
    }
  ],
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_title": "Youtube Distractions",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
